<script>
    function switchAvatar() {
      // Get the current avatar image
      var avatar = document.getElementById('avatar');
  
      // If the current avatar is male, switch to female
      if (avatar.src.includes('MaleAvatar.png')) {
        avatar.src = '/content/images/femaleAvatar.png';
        avatar.alt = 'Female avatar';
      }
      // If the current avatar is female, switch to male
      else {
        avatar.src = '/content/images/MaleAvatar.png';
        avatar.alt = 'Male avatar';
      }
    }
  </script>